<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">
            @drawable/splash
        </item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Game" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DarkTheme1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/gray_900</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/gray_200</item>

        <item name="colorSecondary">@color/gray_400</item>
        <item name="colorSecondaryVariant">@color/gray_500</item>
        <item name="colorOnSecondary">@color/gray_600</item>
        <item name="android:windowBackground">@color/gray_800</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:popupBackground">@color/gray_700</item>
        <item name="popupMenuBackground">@color/gray_700</item>
        <item name="android:listViewStyle">@style/DarkListView</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="DarkListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/gray_800</item>
        <item name="android:cacheColorHint">@color/gray_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="ExtraBlack" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/gray_900</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/gray_200</item>

        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:popupBackground">@color/black</item>
        <item name="android:listViewStyle">@style/DarkListView</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Nion" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/gray_900</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/gray_200</item>

        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:popupBackground">@color/black</item>
        <item name="android:listViewStyle">@style/DarkListView</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>
